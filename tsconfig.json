{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@stepkit/core": ["packages/core/src/main.ts"],
      "@stepkit/in-memory": ["packages/in-memory/src/main.ts"],
      "@stepkit/inngest": ["packages/inngest/src/index.ts"]
    }
  }
}
