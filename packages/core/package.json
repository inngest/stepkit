{
  "name": "@stepkit/core",
  "version": "0.0.0",
  "type": "module",
  "main": "./main.cjs",
  "module": "./main.js",
  "types": "./main.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./main.d.ts",
        "require": "./main.d.cts"
      },
      "import": "./main.js",
      "require": "./main.cjs"
    },
    "./implementer": {
      "types": {
        "import": "./implementer.d.ts",
        "require": "./implementer.d.cts"
      },
      "import": "./implementer.js",
      "require": "./implementer.cjs"
    }
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "dpdm": "dpdm --exit-code circular:1 src/main.ts src/implementer.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "NODE_OPTIONS='--expose-gc' vitest",
    "test:watch": "NODE_OPTIONS='--expose-gc' vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "hash.js": "^1.1.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "dpdm": "^3.14.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
