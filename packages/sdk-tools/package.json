{
  "name": "@stepkit/sdk-tools",
  "version": "0.0.0",
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "exports": {
    ".": "./src/main.ts"
  },
  "scripts": {
    "build": "tsc",
    "dpdm": "dpdm --exit-code circular:1 src/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS='--expose-gc' vitest",
    "test:watch": "NODE_OPTIONS='--expose-gc' vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@stepkit/core": "workspace:*",
    "hash.js": "^1.1.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "dpdm": "^3.14.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
