{
  "name": "@stepkit/sdk-tools",
  "version": "0.0.0",
  "type": "module",
  "main": "./src/main.ts",
  "module": "./src/main.ts",
  "types": "./src/main.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": "./src/main.ts"
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts && node ../../scripts/fix-dist-package.js .",
    "dpdm": "dpdm --exit-code circular:1 src/main.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "NODE_OPTIONS='--expose-gc' vitest",
    "test:watch": "NODE_OPTIONS='--expose-gc' vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@stepkit/core": "*",
    "hash.js": "^1.1.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "dpdm": "^3.14.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
